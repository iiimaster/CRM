<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mryang.crm.settings.mapper.DictionaryTypeMapper">

    <sql id="type">`code`,`name`,`description`</sql>

    <select id="findAll" resultType="dictionaryType">
        select * from `tbl_dic_type`
    </select>

    <insert id="saveType" parameterType="string" >
        insert into `tbl_dic_type` values(#{code},#{name},#{describe})
    </insert>

    <select id="queryType" resultType="dictionaryType">
        select * from `tbl_dic_type` where code=#{code}
    </select>

    <update id="updateTypeByEditId" >
        update `tbl_dic_type`
        set code=#{code},name=#{name},description=#{describe}
        where code=#{editId}
    </update>

    <update id="updateType" >
        update `tbl_dic_type`
        <set>
            <if test="name != null and name != ''">
                `name`=#{name},
            </if>
            <if test="describe != null and describe != ''">
                `description`=#{describe},
            </if>
        </set>
        where `code`=#{code}
    </update>

    <delete id="deleteType" >
        delete from `tbl_dic_type` where `code`=#{id}
    </delete>

    <sql id="value">`id`,`value`,`text`,`orderNo`,`typeCode`</sql>

    <select id="findAllValues" resultType="dictionaryValue">
        select <include refid="value" />
        from `tbl_dic_value`
    </select>

    <insert id="saveValue" parameterType="dictionaryValue">
        insert into `tbl_dic_value`(`id`,`typeCode`, `value`, `text`, `orderNo`)
        values(#{uuid},#{typeCode},#{value},#{text},#{orderNo})
    </insert>

    <select id="findValueById" resultType="dictionaryValue">
        select <include refid="value"/>
        from `tbl_dic_value` where id=#{id}
    </select>

    <update id="updateValue" parameterType="dictionaryValue">
        update `tbl_dic_value`
        <set>
            <if test="typeCode != null and typeCode != ''">
                `typeCode`=#{typeCode},
            </if>
            <if test="value != null and value != ''">
                `value`=#{value},
            </if>
            <if test="value != null">
                `text`=#{text},
            </if>
            <if test="value != null">
                `orderNo`=#{orderNo},
            </if>
        </set>
        where `id` = #{id}
    </update>

</mapper>