<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mryang.crm.workbench.mapper.ActivityRemarkMapper">

    <select id="queryActivityRemarkListByAid" resultType="activityRemark">
        select * from `tbl_activity_remark` where activityId=#{activityId}
    </select>

    <insert id="saveActivityRemark">
        insert into `tbl_activity_remark`
        (
            id,
            noteContent,
            createTime,
            createBy,
            editFlag,
            activityId
        )
        values
        (
            #{id},
            #{noteContent},
            #{createTime},
            #{createBy},
            #{editFlag},
            #{activityId}
        )
    </insert>

    <delete id="deleteRemarkById">
        delete from `tbl_activity_remark` where id=#{id}
    </delete>

    <select id="queryRemarkById" resultType="activityRemark">
        select * from `tbl_activity_remark` where id=#{id}
    </select>

    <update id="updateRemark">
        update `tbl_activity_remark`
        set
            noteContent=#{noteContent},
            editBy=#{editBy},
            editTime=#{editTime},
            editFlag=#{editFlag}
        where id=#{id}
    </update>

</mapper>